default_platform(:ios)

platform :ios do
  desc "Build + Deploy to TestFlight"
  lane :beta do
    # CI setup
    setup_ci

    # ✅ CORREÇÃO 2: match FORÇANDO auth do repo do MATCH via Basic Authorization
    match(
      type: "appstore",
      readonly: false,
      force_for_new_devices: true,
      git_url: ENV["MATCH_GIT_URL"],
      git_basic_authorization: ENV["MATCH_GIT_BASIC_AUTHORIZATION"],
      git_branch: ENV["MATCH_GIT_BRANCH"] || "master"
    )

    # Build number (timestamp)
    increment_build_number(
      build_number: Time.now.strftime("%Y%m%d%H%M")
    )

    # Build + Archive
    gym(
      scheme: "App",
      configuration: "Release",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          "com.vyrlabs.app" => "match AppStore com.vyrlabs.app"
        }
      },
      # (adiantando o próximo erro comum: "requires a development team")
      xcargs: "DEVELOPMENT_TEAM=#{ENV['APP_STORE_CONNECT_TEAM_ID']}"
    )

    # Upload to TestFlight
    pilot(
      skip_waiting_for_build_processing: true
    )
  end
end
