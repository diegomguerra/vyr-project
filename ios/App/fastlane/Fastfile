default_platform(:ios)

platform :ios do
  desc "Deploy to TestFlight"
  lane :beta do
    # Setup CI environment (creates temporary keychain)
    # Note: setup_ci forces readonly mode, so we override it after
    setup_ci if is_ci
    
    # Override the readonly mode that setup_ci enables
    ENV["MATCH_READONLY"] = "false"
    # Setup App Store Connect API Key
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_API_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_API_KEY"],
      is_key_content_base64: true
    )

    # Build frontend (safety net for local runs)
    unless ENV["CI"]
      sh("cd ../.. && npm install && npm run build && npx cap sync ios")
    end

    # Verify frontend build output exists (check Capacitor-synced assets)
    unless File.exist?("../../dist/index.html") || File.exist?("App/public/index.html")
      UI.user_error!("Frontend build not found â€” ensure 'npm run build && npx cap sync ios' ran successfully.")
    end

    # Fetch or create certificates and provisioning profiles
    # In CI, allow creating new certs if they don't exist
    match(
      type: "appstore",
      readonly: false,
      api_key: api_key,
      force_for_new_devices: true
    )

    # Increment build number
    increment_build_number(
      xcodeproj: "App.xcodeproj",
      build_number: Time.now.strftime("%Y%m%d%H%M")
    )

    # Build the app
    gym(
      scheme: "App",
      configuration: "Release",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          "com.vyrlabs.app" => "match AppStore com.vyrlabs.app"
        }
      }
    )

    # Upload to TestFlight
    pilot(
      api_key: api_key,
      skip_waiting_for_build_processing: true
    )
  end
end
